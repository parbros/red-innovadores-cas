<%# coding: UTF-8 -%>
<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Red Innovacion - Login</title>
    
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="<%= escape_html @uri_path %>/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="<%= escape_html @uri_path %>/bootstrap-responsive.min.css" />
    <link rel="stylesheet" type="text/css" href="<%= escape_html @uri_path %>/red-innovadores-cas.css" />
    <link rel="icon" type="image/png" href="<%= escape_html @uri_path %>/themes/<%= escape_html @theme %>/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body onload="if (document.getElementById('username')) document.getElementById('username').focus()">
